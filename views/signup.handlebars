<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h2>Signup</h2>
      <form class="form signup-form">
        <div class="mb-3">
          <label for="name-login" class="form-label">Name</label>
          <input type="text" class="form-control" id="name-signup">
        </div>
        <div class="mb-3">
          <label for="email-signup" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email-signup">
        </div>
        <div class="mb-3">
          <label for="password-signup" class="form-label">Password</label>
          <input type="password" class="form-control" id="password-signup">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>
  </div>
</div>

