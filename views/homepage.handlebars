<p>homepage-handlebars</p>
<!-- Loop over each object in the projects array -->
{{#each blogPosts as |blog| }}
<div class="row mb-4">
  <div class="col-md-5">
    <h2>
      <a href="/blogPost/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.content}}
    </p>
  </div>
</div>
{{/each}}