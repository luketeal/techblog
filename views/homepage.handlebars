<!-- Loop over each object in the projects array -->
{{#each blogPosts as |blog| }}
<a class="text-decoration-none text-dark fst-normal" href="/blogPost/{{blog.id}}">
  <div class="container">
    <div class="row m-4 border border-5 rounded-pill border-secondary p-3">
      <div class="row justify-content-between">
        <h2 class="col">
          {{blog.title}} 
        </h2>
        <span class="col text-end fw-lighter fst-italic">by {{blog.user.name}} on {{blog.date_created}}</span>
      </div>
      <div>
        <p>
          {{blog.content}}
        </p>
      </div>
    </div>
  </div>
</a>
{{/each}}

